# Conky config for i3bar consumption
background no
out_to_x no
out_to_console yes
update_interval 1
disable_auto_reload no
cpu_avg_samples 2
net_avg_samples 2
temperature_unit celsius
double_buffer no
no_buffers yes
override_utf_locale yes
uppercase no
use_spacer none
lua_load ~/.conky/conky.lua
lua_startup_hook conky_startup
if_up_strictness link

# Templates
#
# CPU: if the 0-based core exists, output the name and utilisation
template0 ${if_existing /sys/bus/cpu/devices/cpu\1}${if_match \1 > 0}•${endif}${lua_parse conky_cpuVal \1}%${endif}

# Network: if the specified interface is up, give up and down speeds
template1 ${if_up \1} \2 ${downspeedf \1} ${upspeedf \1}${endif}

# HDD: if the mount point is mounted, display percentage
template2 ${if_mounted \1}\1 ${fs_used_perc \1}% ${endif}

# VM: output JSON for each VM found
template3 {"name":"vm","instance":"\1","full_text":"\1 \2","short_text":"\1 \2","align":"right","urgent":false,"separator":true,"separator_block_width":3},

TEXT
[{"name":"system","instance":"0","full_text":"${freq_g cpu0}GHz ${template0 0}${template0 1}${template0 2}${template0 3}${template0 4}${template0 5}${template0 6}${template0 7} ${memperc}% ${swapperc}%","short_text":"${freq_g cpu0}G ${template0 0}${template0 1}${template0 2}${template0 3}${template0 4}${template0 5}${template0 6}${template0 7} ${memperc}% ${swapperc}%","align":"right","urgent":false,"separator":false,"separator_block_width":3},\
