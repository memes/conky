{"name":"disk","instance":"0","full_text":" ${template2 /}${template2 /boot}${template2 /data}${template2 /home}${template2 /mnt}${template2 /opt}${template2 /tmp}${template2 /usr}${template2 /var}${lua_parse conky_mediaMounts template2}","short_text":" ${template2 /}${template2 /tmp}","align":"right","urgent":false,"separator":false,"separator_block_width":3},\
{"name":"timestamp","instance":"0","full_text":"${time %I:%M %P %m/%d}","short_text":"${time %I:%M %P %m/%d}","align":"right","urgent":false,"separator":false,"separator_block_width":0},\
{"name":"power","instance":"0","full_text":" ${if_match ${lua_parse conky_acOnline} == 1}${endif}${if_match ${lua_parse conky_batteryPerc} < 10}${else}${if_match ${lua_parse conky_batteryPerc} < 35}${else}${if_match ${lua_parse conky_batteryPerc} < 65}${else}${if_match ${lua_parse conky_batteryPerc} < 90}${else}${endif}${endif}${endif}","short_text":" ${if_match ${lua_parse conky_acOnline} == 1}${endif}${if_match ${lua_parse conky_batteryPerc} < 10}${else}${if_match ${lua_parse conky_batteryPerc} < 35}${else}${if_match ${lua_parse conky_batteryPerc} < 65}${else}${if_match ${lua_parse conky_batteryPerc} < 90}${else}${endif}${endif}${endif}","align":"right","urgent":false,"separator":false,"separator_block_width":3}\
